#include <stdio.h>

int main() {
    int N;
    
    // Input N
    printf("Enter the value of N: ");
    scanf("%d", &N);
    
    // Print upper triangle
    for (int i = 1; i <= N; i++) {
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }
    
    // Print lower triangle
    for (int i = N-1; i >= 1; i--) {
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}

